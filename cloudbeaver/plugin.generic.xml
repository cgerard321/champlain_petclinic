<?xml version="1.0" encoding="UTF-8"?>
<plugin>
    <!-- Define driver under Generic provider (wiki "Configuring drivers in DBeaver") -->
    <extension point="org.jkiss.dbeaver.dataSourceProvider">
        <datasource id="generic" label="Generic" description="Generic JDBC">
            <drivers managable="true">
                <driver
                        id="mongodb-jdbc"
                        label="MongoDB (JDBC)"
                        description="MongoDB JDBC driver (SQL layer; class com.mongodb.jdbc.MongoDriver)"
                        class="com.mongodb.jdbc.MongoDriver"
                        sampleURL="jdbc:mongodb://{host}[:{port}]/{database}"
                        useURL="true"
                        defaultPort="27017"
                        categories="nosql">
                    <!-- point to our jars folder via the bundle we exposed in resources -->
                    <file type="jar" path="drivers/mongodb-jdbc" bundle="drivers.mongodb-jdbc"/>
                </driver>
            </drivers>
        </datasource>
    </extension>
</plugin>
