<?xml version="1.0" encoding="UTF-8"?>
<plugin>
    <!-- RESOURCES: tell CloudBeaver where our jars live -->
    <extension point="io.cloudbeaver.resources">
        <resource name="drivers/mongodb-jdbc"/>
        <!-- keep other <resource> entries here if you copied a full file -->
    </extension>

    <!-- BUNDLES: attach a bundle id -->
    <extension point="io.cloudbeaver.resourceBundle">
        <bundle id="drivers.mongodb-jdbc" label="MongoDB JDBC Driver files"/>
        <!-- keep other <bundle> entries -->
    </extension>

    <!-- ENABLE the driver (the full id is usually 'generic.<your-id>') -->
    <extension point="io.cloudbeaver.enabledDrivers">
        <driver id="generic.mongodb-jdbc"/>
        <!-- keep other <driver> entries -->
    </extension>
</plugin>
