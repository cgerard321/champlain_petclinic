<?xml version="1.0" encoding="UTF-8"?>
<plugin>

    <!-- Existing resources (CloudBeaver has many). Keep your current ones too. -->
    <extension
            point="io.cloudbeaver.resources">
        <!-- add ours -->
        <resource name="drivers/mongodb-jdbc"/>
    </extension>

    <!-- Bind resource folders to bundle IDs -->
    <extension
            point="io.cloudbeaver.resources.bundles">
        <!-- add ours -->
        <bundle id="drivers.mongodb-jdbc" label="MongoDB JDBC Driver files"/>
    </extension>

    <!-- Enable drivers that CloudBeaver should expose in the UI -->
    <extension
            point="io.cloudbeaver.resources.drivers">
        <!-- keep the existing list that CE ships with, AND add this line: -->
        <driver id="generic.mongodb-jdbc"/>
    </extension>

</plugin>
