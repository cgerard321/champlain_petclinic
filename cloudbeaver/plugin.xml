<?xml version="1.0" encoding="UTF-8"?>
<plugin>
    <!-- RESOURCES: add our mongodb-jdbc driver folder -->
    <extension point="io.cloudbeaver.resources">
        <resource name="drivers/mongodb-jdbc"/>
        <!-- keep any other existing <resource> entries from your image here -->
    </extension>

    <!-- BUNDLES: declare a bundle id that points to that resource dir -->
    <extension point="io.cloudbeaver.resourceBundle">
        <bundle id="drivers.mongodb-jdbc" label="MongoDB JDBC Driver files"/>
        <!-- keep other <bundle> entries here -->
    </extension>

    <!-- ENABLE DRIVERS: enable the JDBC driver by id under Generic provider -->
    <extension point="io.cloudbeaver.enabledDrivers">
        <driver id="generic.mongodb-jdbc"/>
        <!-- keep other <driver id="..."/> entries here -->
    </extension>
</plugin>
