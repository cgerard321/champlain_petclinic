    "@angular/platform-browser-dynamic": "^18.2.14",
    "@angular/router": "^18.0.0",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@types/lodash": "^4.17.20",
    "@types/moment": "^2.11.29",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.4.21",
    "axios": "^1.7.7",
    "bad-words": "^4.0.0",
